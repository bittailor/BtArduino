
project ArduinoCore/main 
	: source-location src	 
	: requirements 
	   <include>inc 
	   <include>src
	: usage-requirements 
	   <include>inc 
	;

excludes = DigitalOutput.cpp Colorduino.cpp ShiftRegister.cpp TcpServer.cpp ;

# target
lib ArduinoCore : 
    [ glob-tree *.cpp                ] 
    /ArduinoLibrary/main//ArduinoLibrary : 
    <toolset>avr ;

# host
lib ArduinoCore : 
    [ glob-tree *.cpp : $(excludes)  ] 
    /ArduinoLibrary/main//ArduinoLibrary ;
